<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HceNdefTag" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_variant</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Background and Surface colors. -->
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_variant</item>
    </style>

    <style name="Theme.HceNdefTag" parent="Base.Theme.HceNdefTag" />

    <style name="Theme.HceNdefTag.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />
    <style name="Theme.HceNdefTag.PopupOverlay" parent="ThemeOverlay.Material3.Light" />
</resources>
